func assert(that, msg)
{
	theMsg := msg + " [" + (that ? "✓" : "✗") + "]";
	#if(!result) thePrint += " - expected " + this + " to be " + and + " than " + that;
	println(theMsg);
	
	if(that)
	{
		testPassed();
	}
	else
	{
		testFailed();
		setExitCode(1);
	}
}

func assertfail(that, msg)
{
	isfailed := false;
	try 
	{
		eval(that);
	}
	catch
	{
		isfailed := true;
	}
	theMsg := msg + " [" + (isfailed ? "✓" : "✗") + "]";
	if(isfailed)
	{
		testPassed();
	}
	else
	{
		testFailed();
		setExitCode(1);
	}
	println(theMsg);
}