# Welcome to HATRED.
# Hassium Testing Runtime Environment Distribution

exitcode = 0;
failed = 0;
passed = 0;

func assert(that, msg)
{
	theMsg = msg + " [" + (that ? "✓" : "✗") + "]";
	#if(!result) thePrint += " - expected " + this + " to be " + and + " than " + that;
	println(theMsg);
	
	if(that)
	{
		passed++;
	}
	else
	{
		failed++;
		exitcode = 1;
	}
}

func assertfail(that, msg)
{
	isfailed = false;
	try 
	{
		eval(that);
	}
	catch
	{
		isfailed := true;
	}
	theMsg = msg + " [" + (isfailed ? "✓" : "✗") + "]";
	if(isfailed)
	{
		passed++;
	}
	else
	{
		failed++;
		exitcode = 1;
	}
	println(theMsg);
}